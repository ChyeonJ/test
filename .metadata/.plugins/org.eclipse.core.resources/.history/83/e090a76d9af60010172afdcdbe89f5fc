package oop;
/**
 * <pre>
 *  학생 평균 및 학점 구하기 실습
 *  class : Student
 *  Member Variable : java(int), python(int), cpp(int), csharp(int)
 *  Instance Method : getSumAllScores()(int), getAverage()(double), 
 *  				  getCourseCredit()(double), getABCDEF()(String)
 * </pre>
 */
public class Student {
	
	//Member Variable
	int java;
	int python;
	int cpp;
	int csharp;
	
	
	/**
	 * <pre>
	 * 멤버 변수를 모두 더해 int 타입으로 반환
	 * </pre>
	 * @return
	 */
	public int getSunAllScores() {
		int resultSum = java + python + cpp + csharp;
		return resultSum;
		
	}
	/**
	 * <pre>
	 * 합계점수 / 4의 결과를
	 * 소수점 아래 두자리까지만 반환
	 * </pre>
	 */
	public double getAverage() {
		
		double resultAverage = (java + python + cpp + csharp) / 4;
		return resultAverage / 10;
	}
	
	public double getCourseCredit() {
		
		double resultGrade = (java + python + cpp + csharp -55) / 10;
		return resultGrade;
		
	}
	
	
	
	
	
}
