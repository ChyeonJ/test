package exam;

import java.util.Scanner;

public class HomeWork_260119 {

	public static void main(String[] args) {
		// 별찍기
		
		Scanner sc = new Scanner(System.in);
		int n = sc.nextInt();
		
		int i = 1;
		int j = 1;
		
		while (n >= i) {
			j = 1;
			while(j <= n - i) {
				System.out.print(" ");
				j++;
			}
			while(j <= n) {
				System.out.print("*");
				j++;
			}
			i++;
			System.out.println(" ");
		}
		
		

	}

}
