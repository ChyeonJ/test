package exam;

public class ArithmaticQuiz4 {

	public static void main(String[] args) {

		int subjectA = 100; //A+
		int subjectB = 80;	//B
		int subjectC = 95;	//A+
		int subjectD = 68;	//D+
		
		int totalScore = subjectA + subjectB + subjectC + subjectD; // 모든 과목들 합
		double average = totalScore / 4f; //평균점수 소수점짜리까지 해야 표현할 수 있음
		double score = average / 4.5f; // 4.5 만점 기준 학점 계산. 소수점 이하 두라지 까지.
									// (평균점수 -55) 에서 소수점 계산
		
		System.out.println("점수 총합 : " + totalScore);
		System.out.println("점수 평균 : " + average );
		System.out.println("학점 결과 : " + score);

	}

}
