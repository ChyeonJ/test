package java_exam;

public class Variables1 {

	public static void main(String[] args) {
		// 중요한 타임 (int, long, float, double, boolean)
		// 나이가 몇살인지 구해보는 나이 계산기
		// 현재 연도 - 나의 생년
		System.out.println(2026 - 2001 + 1);
		
		// Var Namig Convention 규칙
		// 1. 단어의 첫번째 글자는 소문자로 작성 카멜기법
		// 2. 두번째 이후의 단어의 첫 번째 글자만 대문자로 작성
		// 3. 특수기호나 숫자로 시작할 수 없다.
		// 	- 사용가능한 특수기호 ( _ ) <-- 권장하지 않음
		{
			int nowYear = 2026;
			int myBirthYear = 2001;
			int myAge = nowYear - myBirthYear + 1;
			
			//System.out.println(nowYear - myBirthYear + 1);
			System.out.println(myAge);
		}
		
		System.out.println("계산 끝났습니다.");
		
		 long price = 1000;
		 //long, float 리터널(literal)을 사용
		 // long  buildingPrice = 10_000_000_000; 자바의 기본 정수형은 int이기 때문에  int (21조의) 범주를 벗어난 숫자라 에러가 남
		 long  buildingPrice = 10_000_000_000L; //int에서 long임을 알리는 l, L 대문자 L을 사용
		 // float ratio = 5.111; 자바의 기본 소수는 double이기 때문에  float 변경을 위해 f를 붙임
		 float ratio = 5.111f;
		 double doubleRatio = 3122.1545451574;
		 
		 // final을 앞에 사용하면 상수 변수의 값을 변경할 수 없음
		 System.out.println(buildingPrice);
		 
		 long bigNumber = Integer.MAX_VALUE;
		 int normalNumber = (int) bigNumber; //에러가 남 값을 넣으려는데 크기가 작아서 그럼 8바이트에서 4바이트를 넣으려고 하기 때문
		 
		 // 64bit 할 때 마지막에는 양수인지 음수인지 판단함,
		 // 정수 오버플로우 : 정수 값이 증가하면서 허용된 가장 큰 값보다 커져 실제 저장되는 값이 의도치 않게 작은수, 음수가 됨
//		 int num = Integer.MAX_VALUE;
//		 num = num + 1;
//		 System.out.println(num);
		 
		 // 묵시적 형변환 ( double이란 64명 승객을 태울 수 있는 버스에 int란 32명의 승객이 들어가짐)
		 int num = Integer.MAX_VALUE;
		 num = num + 1;
		 System.out.println("결과" + num);
		 
		 
		 // 명시적 형변환 (64명의 승객을 태울 수 있는 
		 //아래가 에러가 나는 이유 "+1"은 인트이기 때문
//		 byte bNumber = 127;
//		 bNumber = bNumber + 1;
		 byte bNumber = 127;
//		 bNumber = bNumber + (byte) 1; 이것도 안됨
		 bNumber = (byte) (bNumber + 1);
		 System.out.println("------");
		 System.out.println(bNumber);
		 
		 //  묵시적 형변환 예시 아래의 결과는 3 + 7의 결과는 10 이 아니다
		 // 아래의 결과 3 + 7의 결과는 37로 뜸
		 // "3 + 7의 결과는 " = 19 바이트여서 뒤에 있는 숫자(Char)를 이어 붙여버린다
		 System.out.println("3 + 7의 결과는 " + (3 + 7));
		 
		 //정수 < 실수 int(4byte) < float(4byte) => long(8byte) < float(4byte)
		 System.out.println(10L + 3.5f);
		 
		 // 묵시적 형변환
		 System.out.println((float)10 /3);
		 System.out.println(10 /(float) 3);
		 
		 // 묵시적 형변환 편하게 하기
		 System.out.println(10f / 3);
		 System.out.println(10 / 3f);
		 
		 int a = Integer.MAX_VALUE;
		 long b = a;
		 
		 
		 
		 
	}

}
