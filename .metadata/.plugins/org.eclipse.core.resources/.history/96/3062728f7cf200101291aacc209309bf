package exam;

public class ArithmaticQuiz4 {

	public static void main(String[] args) {

		int subjectA = 100; //A+
		int subjectB = 80;	//B
		int subjectC = 95;	//A+
		int subjectD = 68;	//D+
		
		int totalScore = subjectA + subjectB + subjectC + subjectD; // 모든 과목들 합
		double average = totalScore / 4d; //평균점수 소수점짜리까지 해야 표현할 수 있음
		// (double) totalScore, 4.0, 4.0d(타입과 일치시키는게 좋음), 4.0f(본인은 이걸 선택함)
		// 내가 한 문제 풀이
		//double score = Math.round((average - 55) * 10) / 100d; // 4.5 만점 기준 학점 계산. 소수점 이하 두라지 까지.
														// (평균점수 -55) 에서 소수점 계산
		//강사님의 풀이법 -> 추후에 내가 한 것 처럼 줄여주신다고 하심.
		double score = average - 55;
		//score = score * 10;
		score *= 10;
		score = Math.round(score);
		//score = score / 100;
		score /= 100;
		
		System.out.println("점수 총합 : " + totalScore);
		System.out.println("점수 평균 : " + average );
		//System.out.println("학점 결과 : " + score / 100);
		System.out.println("학점 결과 : " + score);
		
		

	}

}
