package exam;

import java.util.Scanner;

public class Q2438 {

	public static void main(String[] args) {
		// 첫째 줄에는 별 1개, 둘째 줄에는 별 2개, N번째 줄에는 별 N개를 찍는 문제
		
		Scanner keybord = new Scanner(System.in);
		int n = keybord.nextInt();
		int i = 1;
		int j = 1;
		String air = " ";
		
		while (i >= n) {

			while (j <= i) {
				System.out.print("*");
				j++;
			}
			i++;
		}

	}

}
