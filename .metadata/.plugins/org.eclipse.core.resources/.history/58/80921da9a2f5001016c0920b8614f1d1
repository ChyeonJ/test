package java_exam;

import javax.swing.text.DefaultEditorKit.InsertBreakAction;

public class ArrayExam {

	public static void main(String[] args) {
		// Array 실습
		
		// 배열 선언 2번째 방법
		//int scoreArray[] = new int[4];
		
		// 0 | 0 | 0 | 0 | 0 | 0 | 0 |
		//System.out.println(scoreArray); //배열을 출력 했을 떄 0 0 0 0 0 0 0 뜰줄 알았으나 이상한 영어가 나옴
										// [I@6b95977 [ : 배열 / I : 변수의 타입 / @ : 기준점 / ~ : hashcode
										// hashcode(data) = 변수의 값을 암호화 시킨값
										// [I@6b95977 왜 이렇게 노출할까? : 데이터를 순서대로 나열한게 배열 -> 참조형 변수(레퍼런스 타입)
										// new : 참조형 변수를 만들어라 라는 뜻이다.
										// scoreArray.length==> .연산자 참조형 변수가 있을 때만 사용가능함.
		//int score = 60;
		//System.out.println(score);
		
		
		
		// 배열 선언 1번째 방법
		int[] scoreArray = new int[7];
		scoreArray[0] = 18;
		scoreArray[1] = 22;
		scoreArray[2] = 55;
		scoreArray[3] = 32;
		scoreArray[4] = 66;
		scoreArray[5] = 98;
		scoreArray[6] = 21_000_000;
		//Array 오류 확인하기 : Index 7 out of bounds for length 7 at java_exam.ArrayExam.main
		//scoreArray[7] = 8;
		
		System.out.println(scoreArray[0]);
		System.out.println(scoreArray[1]);
		System.out.println(scoreArray[2]);
		System.out.println(scoreArray[3]);
		System.out.println(scoreArray[4]);
		System.out.println(scoreArray[5]);
		System.out.println(scoreArray[6]);
		
		int random;
		// for문을 사용하여 배열에 값을 자동으로 넣기
		// 서로다른 숫자 7개가 배열에 할당될떄 까지 반복
		/*
		 * 1. 배열에 채워진 숫자의 개수가 7개인가?
		 *  - 예 : 종료
		 *  - 아니오 : 계속
		 *  2. 새로운 숫자를 생성하고, 배열에 이미 존재하는지 확인한다.
		 *  - 존재하지 않으면 배열에 추가하고, 1번으로 돌아간다.
		 *  - 존재하면 다시 2번으로 돌아간다.
		 *  3. 배열에 채워진 숫자들을 출력한다.
		 */
		for(int j = 0; j < scoreArray.length; j++) {
			random = (int) (Math.random() * 45 + 1);
			scoreArray[j] = random;
			while(j < scoreArray.length) {
				if (scoreArray[j] == random) {
					continue;
				}
				else if(scoreArray[j] != random) {
				}
			}
			System.out.println(scoreArray[j]);;
		}
		
		// for문을 사용하여 배열을 출력하는 방식 => 인덱스 값이 벗어나면 항상 에러가 난다
		for(int i = 0; i < scoreArray.length ; i++) {
			System.out.println("for문을 사용한 : " + scoreArray[i]); 
		}
		


	}

}
