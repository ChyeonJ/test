package exam;

import java.util.Scanner;

public class Q2439 {

	public static void main(String[] args) {
		// 첫째 줄에는 별 1개, 둘째 줄에는 별 2개, N번째 줄에는 별 N개를 찍는 문제
		//하지만, 오른쪽을 기준으로 정렬한 별(예제 참고)을 출력하시오.
		
//		Scanner sc = new Scanner(System.in);
//		int n = sc.nextInt();
		
		
		Scanner sc = new Scanner(System.in);
		int n = sc.nextInt();
		
		int i = 1;
		int j = 1;
		
		while(n >= i) {
			j = 1;
			while(j <= i) {
				System.out.print(" ");
				j++;
			}
			j = 1;
			while(j >= i) {
				System.out.print("*");
				j--;
			}
			i++;
			System.out.println(" ");
		}
		
		
		
		
		
		
		
		
		
		
		
		
		
		
		
		
		
		
		
		
		
		
		
		
		
		
		
		
		
		
		
		
