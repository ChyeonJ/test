package oop;
/**
 * 음료 자판기 클래스
 */
public class BeverageMachine {
	
	/**
	 * 음료수 이름
	 */
	String drinkName;
	/**
	 * 음료수 가격
	 */
	int drinkPrice;
	/**
	 * 음료수 재고
	 */
	int drinkStock;
	
	
	/**
	 * class 기본생성자
	 * @param drinkName 음료수 이름
	 * @param drinkPrice 음료수 가격
	 * @param drinkStock 음료수 재고
	 */
	public BeverageMachine(String drinkName, int drinkPrice, int drinkStock) {
		
		this.drinkName = drinkName;		//this. => drinkName 인스턴스 생성
		this.drinkPrice = drinkPrice;
		this.drinkStock = drinkStock;
		
	}
	
	
}
