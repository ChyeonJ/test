package oop;

public class BeverageMachineArray {
	
//	BeverageMachine drinkName;
//	BeverageMachine drinkPrice;
//	BeverageMachine drkinkStock;
	
	BeverageMachine[] drinkM;
	
	public BeverageMachineArray(BeverageMachine drink1,BeverageMachine drink2, BeverageMachine drink3,BeverageMachine drink4) {
		
		this.drinkM = new BeverageMachine[4];
		this.drinkM[0] = drink1;
		this.drinkM[1] = drink2;
		this.drinkM[2] = drink3;
		this.drinkM[3] = drink4;
	}
	/**
	 * 주문하기
	 * @param drinkNum 제품 번호
	 * @param drinkCount 주문 수량
	 * @return "상품이 품절되었습니다", 0반환
	 */
	public int orderDrink(int drinkNum, int drinkCount) {
		

		// 재고가 없다면 품절 멘트와 0 반환
		if(drinkNum < 0 || drinkNum > drinkM.length) {
			System.out.println("상품이 품절됐습니다.");
			return 0;
		}else {
			//몬스터 5개 주문한다면 7500을 반환
			BeverageMachine drinkP = this.drinkM[drinkNum];
			int price = drinkP.drinkPrice * drinkCount;
			
			// 주문을 하면 주문 수량만큼 자판기 음료수의 재고 감소
			drinkP.drinkStock -= drinkCount;
			return price;
		}
	}
	
	public void addDrink(int drinkNum, int drinkcount) {
		
		// - 자판기에 없는 음료수는 입고할 수 없다. (제로콜라, 3) => 아무 변화가 없다!(출력 X)
		if(drinkNum < 0 || drinkNum > drinkM.length) {
			return;
		}
		// 밀키스 3개를 입고하면, 밀키스의 재고가 3개 증가된다.
		
		// 입고를하면 입고 수량만큼 재고가 증가된다.
		
	}
	

}
