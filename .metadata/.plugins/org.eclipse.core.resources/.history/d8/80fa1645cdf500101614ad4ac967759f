package exam;

public class Method_Q1 {
	
	//1번. 1부터 파라미터로 전달된 숫자까지의 합을 구한다.
	// printSum(10) => 55
	public static int addPlus (int num) {
		int hap = 0;
		for(int i = 1; i <= num; i++) {
			hap += i;
		}
		return hap;
	}
	
	//2번. 4부터 파라미터로 전달된 숫자중 소수만 출력한다.
	public static String printPrime(int num) {
		String result = " ";
		boolean check = false;
		
		for (int i = 4; i <= num; i++) {
			//4부터 시작하니까 2의 배수 먼저 나누는 너낌?
			check = false;
			for(int j = 2; j < i; j++) {
				// num / 2의 나머지가 0이면 상수가 아닌것.
				if(num % j == 0) {
					check = true;
					break;
				}
			}
			if (!check) {
				System.out.println(i);
			}
		}
		
		
		return result;
	}
	

	
	//3번. 파라미터로 전될된 숫자 두개 중 가장 큰 수 하나만 출력한다.
	public static int printMax(int num1, int num2) {
		
		int resultMax = Math.max(num1, num2);
		return resultMax;
		
	}
	
	//4번. 파라미터로 전달된 나이가 성인인지 미성년인지 구분하여 출력한다.
	public static String printAge(int age) {
		String resultStr = " ";
		if (age > 19) {
			resultStr = "성인입니다.";
		}
		else if (age <= 19) {
			resultStr = "미성년자입니다.";
		}
		return resultStr;
	}
	
	// 5번 랜덤한 숫자를 생성하고 아래 규칙에 따른 결과를 반환한다.
	
	public static String getFizzBuzz(int num) {
		String resultFizzBuzz = "";
		if(num % 3 == 0 && num % 5 == 0) {
			resultFizzBuzz = "FizzBuzz";
		}
		else if ( num % 3 == 0) {
			resultFizzBuzz = "Fizz";
		}
		else if(num % 5 == 0){
			resultFizzBuzz = "Buzz";
		}
		else {
			resultFizzBuzz = "" + num;
		}
		
		return resultFizzBuzz;
	}
	
	// 6번 서로 다른 숫자 7개를 배열에 할당하여 반환한다.
	public static void getUniqueNumbers() {
		
		int random = 0;
		int[] array = new int[7];
		int count = 0;
		boolean check = false;
		
		while(count < 7) {
			random = (int) (Math.random() * 100);
			check = false;
			
			for(int i = 0; i < array.length; i++) {
				if (array[i] == random) {
					check = true;
					break;
				}
			}
			if (!check) {
				array[count] = random;
				count++;
			}
			
			for (int i = 0; i < array.length; i++) {
				System.out.print(array[i] + " ");
			}
			System.out.println("");
		}
		
	}
	
	// 7번 정수 파라미터 두 개를 전달받아 곱한 결과가 짝수인지 홀수인지 반환한다.
	public static String getEvenOdd(int num1, int num2) {
		String resultEvenOdd = " ";
		int result = num1 * num2;
		if (result % 2 == 0) {
			resultEvenOdd = "짝수";
		}
		else {
			resultEvenOdd = "홀수";
		}
		return resultEvenOdd;
	}
	
	// 8번 전달된 정수 파라미터 5개의 합을 구해 반환한다.
	public static int getSumOfFive(int num1, int num2, int num3, int num4, int num5) {
		int result = num1 + num2 + num3 + num4 + num5;
		return result;
	}
	
	// 9번 합과 점수의 개수를 전달하여 평균을 구해 반환한다. (소수점 둘째까지)
	public static double getAverage(int num1, int num2) {
		double result = (num1 + num2) / 2d / 10; 
		return result;
	}
	
	// 10번 평균 점수를 파라미터로 전달하여 학점을 반환한다.
	public static String getGrade(int grade) {
		String result = "";
		if(grade >= 95) {
			result = "A";
		}
		else if(grade >= 85 && grade <= 94) {
			result = "B";
		}
		else if(grade >= 75 && grade <= 84) {
			result = "C";
		}
		else if(grade >= 65 && grade <= 74) {
			result = "D";
		}
		else {
			result = "F";
		}
		return result;
	}
	
	public static void main(String [] args) {
		
		int random = (int) (Math.random() * 100);
		
		//1번
		int result = addPlus(10);
		System.out.println("1번 결과" + result);
		
		//2번
		String resultPrime = printPrime(20);
		System.out.println("2번" + resultPrime);
		
		//3번
		result = printMax(22, 333333);
		System.out.println("3번 결과" +result);
		
		//4번
		String resultAge = printAge(20);
		System.out.println("4번 결과" +resultAge);
		
		//5번
		String resultFizzBuzz = getFizzBuzz(random);
		System.out.println("5번 결과" +resultFizzBuzz);
		
		//6번
		getUniqueNumbers();
		
		//7번
		String resultEven = getEvenOdd(2, 2);
		System.out.println("7번 결과" +resultEven);
		
		//8번
		int resultSum = getSumOfFive(1, 5, 2, 11, 5);
		System.out.println("8번 결과" +resultSum);
		
		//9번
		double resultAverage = getAverage(150, 3);
		System.out.println("9번 결과" +resultAverage);
		
		//10번
		String resultGrade = getGrade(44);
		System.out.println("10번 결과" +resultGrade);
		
		
	}

}
