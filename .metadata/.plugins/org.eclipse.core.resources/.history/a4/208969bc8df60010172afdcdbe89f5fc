package oop;

/**
 * <pre>
 * 행동이 가능한 : 간판, 키오스크, 주방 Order 기기, 정수기, 손님, 종업원, 요리사
 * 정수기 - water purifier
 * 정수기가 할 수 있는 일
 * 1. temperatureButton -> 정수기 물의 옵션을 설정한다.
 * 2. waterPress -> 반 컵, 한 컵 물이 나온다.
 * 3. filterExp -> 필터 교체 수명을 알려준다.
 * 4. disinfectionButton -> 소독 버튼을 누르면 10초 타이머를 세주고 소독이 완료된다.
 * </pre>
 */
public class FoodStoreApp {
	
	double expCount = 0;
		
	/**
	 * <pre>
	 * 먼저 어떤 종류의 물을 마실지 설정하는 버튼
	 * </pre>
	 * @param choice : 냉수, 온수, 정수등의 값을 받아내는 파라미터
	 */
	public void temperatureButton(String choice) {
		
		if (choice == "차가운물" || choice == "냉수") {
			System.out.println("냉수 설정이 완료됐습니다.");
		}
		else if( choice == "정수" || choice == "미지근한물") {
			System.out.println("정수 설정이 완료됐습니다.");
		}
		else if(choice == "뜨거운" || choice == "온수") {
			System.out.println("온수 설정이 완료됐습니다.");
		}else {
			System.out.println("단위가 잘못됐어요!");
		}
		
	}
	/**
	 * <pre>
	 * 물을 출수하기전 반만 출수할지 한컵을 출수할건지 정합
	 * </pre>
	 * @param choice : 반컵, 한컵을 정하는 파라미터
	 */
	public void waterPress(String choice) {

			if(expCount > 0 && expCount <= 100) {
				if (choice == "반컵") {
					System.out.println("반컵만 출수합니다.");
					expCount -= 0.5d;
				}
				else if(choice == "한컵") {
					System.out.println("한컵만 출수합니다.");
					expCount -= 1;
				}
				else {
					System.out.println("단위가 잘못됐어요!");
				}
			}else {
				System.out.println("정수기 필터를 확인하세요");
			}
		
	}
	/**
	 * 필터 조회를 통해 교체 시기를 알려주는 메소드
	 * @param choice : 교체를 가능하게 함.
	 */
	public void filterExp(String choice) {
		
		if(choice == "교체" && expCount == 0) {
			System.out.println("교체가 완료됐습니다.");
			expCount += 100;
		}else if(choice == "교체" && expCount != 0){
			System.out.println("필터 교체 시기가 아닙니다.");
		}

		if(expCount <= 100) {
			System.out.println("현재 필터의 남은 사용량은 " + expCount + " 입니다.");
		}
	}
	
	public void disinfection() {
		System.out.println("소독을 시작합니다.");
		for(int i = 1; i <= 10; i++) {
			System.out.print(i + " ");
		}
		System.out.println("");
		System.out.println("소독이 완료됐습니다.");
		
	}
}
