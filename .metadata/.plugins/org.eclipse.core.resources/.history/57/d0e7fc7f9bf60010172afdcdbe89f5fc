package oop;
/**
 * <pre>
 *  학생 평균 및 학점 구하기 실습
 *  class : Student
 *  Member Variable : java(int), python(int), cpp(int), csharp(int)
 *  Instance Method : getSumAllScores()(int), getAverage()(double), 
 *  				  getCourseCredit()(double), getABCDF()(String)
 * </pre>
 */
public class Student {
	
	//Member Variable
	int java;
	int python;
	int cpp;
	int csharp;
	
	
	/**
	 * <pre>
	 * 멤버 변수를 모두 더해 int 타입으로 반환
	 * </pre>
	 * @return
	 */
	public int getSunAllScores() {
		return java + python + cpp + csharp;
	}
	/**
	 * <pre>
	 * 합계점수 / 4의 결과를
	 * 소수점 아래 두자리까지만 반환
	 * </pre>
	 */
	public double getAverage() {
		return (java + python + cpp + csharp) / 4 / 10;
	}
	/**
	 * <pre>
	 * (평균점수 - 55) / 10의 결과를
	 * 소수점 아래 두자리까지만 반환
	 * </pre>
	 * @return
	 */
	public double getCourseCredit() {
		return (((java + python + cpp + csharp) / 4) -55) / 10;
	}
	
	/**
	 * <pre>
	 * 학점을 기준에 맞춰 반환
	 * </pre>
	 * @return
	 */
	
	public String getABCDF() {
		double resultAverage = (((java + python + cpp + csharp) / 4) -55) /10;
		if( resultAverage >= 4.1 && 4.5 <= resultAverage) {
			return "A+";
		}
		else if(resultAverage >= 3.6 && 4.0 <= resultAverage) {
			return "A";
		}
		else if(resultAverage >= 3.1 && 3.5 <= resultAverage) {
			return "B+";
		}
		else if(resultAverage >= 2.6 && 3.0 <= resultAverage) {
			return "B";
		}
		else if(resultAverage >= 1.6 && 2.5 <= resultAverage) {
			return "C";
		}
		else if(resultAverage >= 0.6 && 1.5 <= resultAverage) {
			return "D";
		}
		return "F";
		
	}
	
	
	
	
}
